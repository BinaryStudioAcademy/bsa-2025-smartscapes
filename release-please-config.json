{
	"group-pull-request-title-pattern": "chore(release): release-${version}",
	"packages": {
		".": {
			"release-type": "node",
			"include-component-in-tag": false
		},
		"apps/backend": {
			"release-type": "node",
			"component": "@smartscapes/backend"
		},
		"apps/frontend": {
			"release-type": "node",
			"component": "@smartscapes/frontend"
		},
		"packages/shared": {
			"release-type": "node",
			"component": "@smartscapes/shared"
		},
		"tests": {
			"release-type": "node",
			"component": "@smartscapes/tests"
		}
	},
	"plugins": [
		{
			"type": "node-workspace"
		}
	]
}
